# .env.example
# Copiar este archivo como .env y ajustar los valores según tu configuración

# URL de la API (cambia por la URL de tu API)
REACT_APP_API_URL=http://localhost:5000/api

# Entorno de desarrollo/producción
REACT_APP_NODE_ENV=development

# URL base del frontend (para compartir productos)
REACT_APP_FRONTEND_URL=http://localhost:3000

# Configuración opcional para analytics o tracking
# REACT_APP_GOOGLE_ANALYTICS_ID=
# REACT_APP_FACEBOOK_PIXEL_ID=

# Configuración para imágenes por defecto
# REACT_APP_DEFAULT_IMAGE_URL=

# Configuración de paginación por defecto
REACT_APP_DEFAULT_PAGE_SIZE=12

# Habilitar/deshabilitar características
REACT_APP_ENABLE_FAVORITES=true
REACT_APP_ENABLE_CART=true
REACT_APP_ENABLE_SHARING=true